<div class="row">
    <div class="col-md-6">
        {{#each site.images}}
            {{#if this.fail}}
                <div class="diff-box">
                    <img src="{{this.path1}}" alt=""/>
                    <div class="diff-wrapper">
                        <img src="{{this.report.outfile}}" alt="" class="diff-img diff-{{math @index "+" 1}}"/>
                    </div>
                </div>
            {{else}}
                <div>
                    <img src="{{this.path1}}" alt=""/>
                </div>
            {{/if}}
        {{/each}}
    </div>
    <div class="col-md-6">
        {{#each site.images}}
            {{#if this.fail}}
                <div class="diff-box">
                    <img src="{{this.path2}}" alt=""/>
                    <div class="diff-wrapper">
                        <img src="{{this.report.outfile}}" alt="" class="diff-img diff-{{math @index "+" 1}}"/>
                    </div>
                </div>
            {{else}}
                <div>
                    <img src="{{this.path1}}" alt=""/>
                </div>
            {{/if}}
        {{/each}}
    </div>
</div>
